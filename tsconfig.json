{
  "compilerOptions": {
    "typeRoots": ["src/types/env.d.ts", "./node_modules/@types"],
    "allowJs": true,
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["node_modules/*", "src/types/*", "./src/*"]
    }
  },
  "include": ["src/**/*.ts","src/utils/utility/*.ts","**/*.ts", "src/testing"],
  "exclude": ["node_modules"]
}